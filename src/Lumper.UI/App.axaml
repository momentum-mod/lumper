<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Lumper.UI"
             x:Class="Lumper.UI.App">

  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.Resources>
        <!-- To change these across the application, just whack static-weight TTFs in Assets/Fonts/ and update below. -->
        <FontFamily x:Key="Sans">avares://Lumper.UI/Assets/Fonts/Roboto/#Roboto</FontFamily>
        <FontFamily x:Key="Monospace">avares://Lumper.UI/Assets/Fonts/JetBrains_Mono/#JetBrains Mono</FontFamily>
    </Application.Resources>

  <Application.Styles>
    <StyleInclude Source="Styles/Styles.axaml" />
        <materialIcons:MaterialIconStyles />
  </Application.Styles>
</Application>
