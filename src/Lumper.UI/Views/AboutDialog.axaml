<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lumper.UI.Views.AboutWindow"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        CanResize="False"
        SystemDecorations="None"
        ShowInTaskbar="False"
        TransparencyLevelHint="AcrylicBlur">

  <Border BorderThickness="1" Background="#88111111" BorderBrush="#10FFFFFF" CornerRadius="4">
    <StackPanel Orientation="Vertical" Spacing="8" Margin="8 8 8 8">
      <StackPanel Orientation="Horizontal" Margin="12 8 12 0" Spacing="16">
        <Image Height="64" Width="64" Source="avares://Lumper.UI/Assets/Images/Lumper.png" VerticalAlignment="Top" />
        <StackPanel Orientation="Vertical" Spacing="2">
          <TextBlock Name="LumperVersion" FontSize="32" FontWeight="Medium" Margin="0 0 0 4" />
          <TextBlock FontSize="14" FontStyle="Italic">Created by the Momentum Mod team and other contributors</TextBlock>
          <TextBlock FontSize="12" Name="DotnetVersion" Margin="0 8 0 0" />
          <TextBlock FontSize="12" Name="AvaloniaVersion" />
          <HyperlinkButton Padding="0" Margin="0 8 0 0" NavigateUri="https://github.com/momentum-mod/lumper">Website and Source Code</HyperlinkButton>
        </StackPanel>
      </StackPanel>
      <Button HorizontalAlignment="Right" Name="CloseButton">Close</Button>
    </StackPanel>
  </Border>
</Window>
