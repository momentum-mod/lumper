<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Lumper.UI.Views.IoProgressWindow"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        CanResize="False"
        SystemDecorations="None"
        ShowInTaskbar="False"
        TransparencyLevelHint="AcrylicBlur">

  <Border BorderThickness="1" Background="#88111111" BorderBrush="#10FFFFFF" CornerRadius="4">
    <StackPanel Spacing="8" Margin="12">
      <TextBlock FontFamily="{StaticResource Monospace}" Name="TitleDisplay" />
      <ProgressBar Width="800" Height="16" Name="ProgressBar" />
      <TextBlock Width="800" FontFamily="{StaticResource Monospace}" TextAlignment="Right" TextWrapping="NoWrap"
                 Name="Status" FontSize="12" />
      <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Cancel_OnClick">Cancel</Button>
    </StackPanel>
  </Border>
</Window>
