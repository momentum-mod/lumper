<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:entviews="clr-namespace:Lumper.UI.Views.Bsp.Lumps.PakFile"
             xmlns:entmodels="clr-namespace:Lumper.UI.ViewModels.Bsp.Lumps.PakFile"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Lumper.UI.Views.Bsp.Lumps.PakFile.PakFileEntryBranchView">

    <Grid RowDefinitions="Auto,Auto" 
          ColumnDefinitions="Auto,Auto">
        <entviews:PakFileEntryView Grid.Row="0" Grid.ColumnSpan="2"/>
        <DockPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Button DockPanel.Dock="Left" Click="OnAddFileClick">Add file</Button>
            <Button DockPanel.Dock="Left" Click="OnAddDirClick">Add directory</Button>
        </DockPanel>
    </Grid>
</UserControl>
